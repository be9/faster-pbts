{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true
  },
  "include": ["src/**/*"]
}
